{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Raw message from the OCS",
  "type": "object",
  "properties": {
    "id": {
      "description": "Identifies the event.",
      "$ref": "#/$defs/iddef",
      "examples": [
        "prLSlfYXlQ8Nmsa8gyVi6PPZUmA="
      ]
    },
    "source": {
      "description": "Identifies the context in which an event happened.",
      "$ref": "#/$defs/sourcedef",
      "examples": [
        "mbta.com/trike-12345"
      ]
    },
    "specversion": {
      "description": "The version of the CloudEvents specification which the event uses.",
      "$ref": "#/$defs/specversiondef",
      "examples": [
        "1.0"
      ]
    },
    "type": {
      "description": "Describes the type of event related to the originating occurrence.",
      "$ref": "#/$defs/typedef",
      "examples": [
        "com.mbta.ocs.raw_message"
      ]
    },
    "time": {
      "description": "Timestamp of when the occurrence happened. Must adhere to RFC 3339.",
      "$ref": "#/$defs/timedef",
      "examples": [
        "2018-04-05T17:31:00Z"
      ]
    },
    "partitionkey": {
      "description": "A partition key for the event, typically for the purposes of defining a causal relationship/grouping between multiple events.",
      "$ref": "#/$defs/partitionkeydef"
    },
    "data": {
      "description": "The event payload.",
      "$ref": "#/$defs/datadef"
    }
  },
  "required": [
    "id",
    "source",
    "specversion",
    "type",
    "data",
    "time"
  ],
  "$defs": {
    "iddef": {
      "type": "string",
      "minLength": 1
    },
    "sourcedef": {
      "type": "string",
      "format": "uri-reference",
      "minLength": 1
    },
    "specversiondef": {
      "type": "string",
      "minLength": 1
    },
    "typedef": {
      "type": "string",
      "const": "com.mbta.ocs.raw_message"
    },
    "timedef": {
      "type": "string",
      "format": "date-time",
      "minLength": 1
    },
    "partitionkeydef": {
      "type": "string",
      "minLength": 1
    },
    "datadef": {
      "type": "object",
      "required": [
        "raw"
      ],
      "properties": {
        "raw": {
          "description": "Raw OCS string, without the trailing record flag.",
          "type": "string",
          "minLength": 1,
          "examples": [
            "791612,RGPS,08:51:54,G,U15-141-626,3639,42.335725,71.145005,0.00,75.94"
          ]
        }
      }
    }
  }
}
